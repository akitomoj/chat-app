<div class="main_upper">
  <div class="group_name">hogehoge
    <%# <a href='#'>hogehoge</a> %>
  </div>
  <div class="chat_end">
    <a href='#'>チャットを終了する</a>
  </div>
</div>

<div class="main_middle">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'main_lower', local: true do |f| %>
  <div class="form_lower">
    <%= f.text_field :content, class: 'form_message', placeholder: "type a message" %>
    <label class="form_image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit '送信', class: "form_submit" %>
<% end %>